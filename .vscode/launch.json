    "version": "0.2.0",
    "configurations": [
        {
            "name": "Sandbox",
            "program": "${workspaceFolder}/sandbox.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "name": "Launch Program",
            "program": "${workspaceFolder}\\server.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "name": "Node: Nodemon",
            "processId": "${command:PickProcess}",
            "protocol":"inspector",
            "request": "attach",
            "restart": true,
            "type": "node"
        }
    ]
}